<Window x:Name="MainWindows" x:Class="WpfMonitoring.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMonitoring"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="MainWindows_Closing">
    <Window.DataContext>
        <local:MainView/>
    </Window.DataContext>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <Label x:Name="lb_NomSite" Grid.Row="1" Grid.Column="1">Nom du site à ajouter</Label>
        <TextBox x:Name="tb_NomSite" Grid.Row="1" Grid.Column="2">aliaa.fr</TextBox>
        <Button x:Name="bt_action" Grid.Row="1" Grid.Column="3" Click="Bt_action_Click" >Ajout</Button>
        <DataGrid Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Sites}" ></DataGrid>
    </Grid>
</Window>
